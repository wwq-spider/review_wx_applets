
.content {
	display: flex;
	flex-direction: column;
	justify-content: center;
	width: 100%;
	height: 100%;
}
.tips {
	color: #00aaff;
	font-size: 14px;
	line-height: 40px;
	text-align: center;
	background-color: #f0f9eb;
	height: 0;
	opacity: 0;
	-webkit-transform: translateY(-100%);
	        transform: translateY(-100%);
	transition: all 0.3s;
}
.tips-ani {
	-webkit-transform: translateY(0);
	        transform: translateY(0);
	height: 40px;
	opacity: 1;
}
.uni-margin-wrap {
	width:690rpx;
	width: 100%;
}
.swiper {
	height: 400rpx;
}
.notice{
	display: flex;
	flex-flow: wrap row;
	width: 100%;
	margin: 1% 2% 0 2%;
}
.swiper-nav{
	width: 90%;
	height: 30px;
	margin-left: 8px;
}
.right{
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1; /*可设置显示的行数 */
	line-clamp: 1;
	-webkit-box-orient: vertical;
	color: #7e7b7b;
	font-size: 30rpx;
}
.text {
	font-size: 35rpx;
	color: #7f7f7f;
	margin: 0 15px;
	margin-top:15%;
	font-weight: bold;
}
.imageStyle {
	margin-top: -2%;
